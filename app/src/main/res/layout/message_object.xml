<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/bad" android:id="@+id/imgBtnMessageHead"
                android:scaleType="fitXY"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txMessageAcc" android:layout_weight="1"
                android:textSize="18sp" android:textColor="@android:color/black"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txMessageTime" android:layout_weight="1"
                android:textSize="18sp"/>
        <ImageButton
                android:layout_width="25dp"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imgBtnMessageInfo"
                style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txMessageText" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="－－－－－－－－－－－－－－－－－－－－－"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView30" android:textAlignment="center"
            android:textStyle="bold" android:textSize="18sp"/>
</LinearLayout>
