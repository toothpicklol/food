<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="100分"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/txPointInfo"
                android:textSize="24sp" android:textColor="@android:color/black" android:textStyle="bold"
                android:textAlignment="center" android:gravity="center_vertical"/>
        <TextView
                android:text="項目"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/txPointList"
                android:textSize="20sp" android:gravity="center_vertical" android:layout_weight="1"
                android:textColor="@android:color/black"/>
        <TextView
                android:text="999+則評分"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:id="@+id/txPointCount"
                android:textSize="18sp" android:textStyle="bold" android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical" android:textColor="@android:color/black"/>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
</LinearLayout>
