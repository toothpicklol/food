<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:background="#FFFBE9A3">
    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="?attr/colorPrimary">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/postToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:layout_weight="30"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_menu_send"
                    android:id="@+id/imgBtnOwnerPost" android:layout_weight="1"
                    android:background="?attr/colorPrimary"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
            android:text="冒用店家申請店主可能會有法律問題!"
            android:layout_width="match_parent"
            android:layout_height="80dp" android:id="@+id/textView2"
            android:textSize="24sp" android:textAlignment="center"
            android:textColor="@android:color/black" android:gravity="center_vertical"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" android:id="@+id/view3"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txOnwerCheck"
            android:textAlignment="center" android:textSize="18sp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" android:id="@+id/view5"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="店名"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/textView25"
                android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/black"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edOwnerShopName" android:layout_weight="1" android:hint="方便驗證者辨認"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="連絡電話"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/txOwnerTel"
                android:textSize="18sp" android:textColor="@android:color/black" android:textStyle="bold"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edOwnerTel" android:layout_weight="1" android:hint="驗證時連絡用"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="地址"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/textView24"
                android:textSize="18sp" android:textStyle="bold" android:textColor="@android:color/black"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edOwnerAddress" android:layout_weight="1" android:hint="請詳細輸入縣市地區街道號碼"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" android:id="@+id/view6"/>
    <TextView
            android:text="請如實填寫，將有使用者到場驗證"
            android:layout_width="match_parent"
            android:layout_height="80dp" android:id="@+id/textView27" android:textSize="24sp"
            android:textColor="@android:color/black" android:textAlignment="center"
            android:gravity="center_vertical"/>
</LinearLayout>
