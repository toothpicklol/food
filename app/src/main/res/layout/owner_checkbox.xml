<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#FFFBE9A3">

    <TextView
            android:text="獲取驗證序號"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tx0"
            android:textSize="24sp" android:background="?attr/colorPrimary"
            android:textColor="@android:color/black" android:textAlignment="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txOwnerPass"
            android:textSize="36sp" android:textAlignment="center" android:text="驗證者尚未點擊驗證"/>
    <TextView
            android:text="請驗證者輸入數字部分即可"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView28" android:textStyle="bold"
            android:textAlignment="center" android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#FFFBE9A3" android:gravity="center">
        <Button
                android:text="取得序號"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnGetOwnerPass"/>
    </LinearLayout>
</LinearLayout>
