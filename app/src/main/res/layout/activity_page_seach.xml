<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pageSearch">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="397dp"
            android:layout_height="684dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp" app:layout_constraintTop_toBottomOf="@+id/text_home"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
            <EditText
                    android:layout_width="354dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etSearch"
                    android:hint="你想吃什麼"
                    android:background="#CFC6C6"/>
            <Button
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_search"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:backgroundTint="#000000" android:background="@android:drawable/ic_menu_search"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="218dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="類型"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/text1"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <CheckBox
                                android:text="韓式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox1"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="日式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox2"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="中式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox3"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="台式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox4"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="美式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox5"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="義式"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox6"
                                android:textSize="12sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <CheckBox
                                android:text="甜點"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox7"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="飲料"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox8"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="早餐"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox9"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="午餐"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox10"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="晚餐"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox11"
                                android:textSize="12sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="193dp">
                        <TextView
                                android:text="服務"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/text2"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <CheckBox
                               android:text="內用"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" android:id="@+id/checkBox12"
                               android:textSize="12sp"/>
                        <CheckBox
                                android:text="外帶"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox13"
                                android:textSize="12sp"/>
                        <CheckBox
                                android:text="停車位"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox14"
                                android:textSize="12sp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>