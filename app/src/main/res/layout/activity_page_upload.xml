<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pageUpload">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="211dp"
            tools:layout_editor_absoluteX="233dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="244dp"
                app:srcCompat="@drawable/common_google_signin_btn_text_disabled"
                android:id="@+id/imageUpload"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:text="設為頭像"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/btnChose"
                        android:layout_weight="1"/>
                <Button
                        android:text="設為背景"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/btnChoseBg"
                        android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" android:id="@+id/txImgUpload"
                    android:layout_weight="1" android:textSize="18sp"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>